<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Data matrix</th>
      <th>Ipe</th>
      <th>Preco</th>
      <th>Cliente</th>
      <th>Data fab</th>
      <th>Data pedido</th>
      <th>Data entrega</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.data_matrix %></td>
        <td><%= pedido.bico.ipe%></td>
        <td><%= pedido.preco%></td>
        <td><%= pedido.cliente.first_name%></td>
        <td><%= pedido.data_fab %></td>
        <td><%= pedido.data_pedido %></td>
        <td><%= pedido.data_entrega %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

